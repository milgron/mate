{
  "name": "mate",
  "version": "0.1.0",
  "description": "Hybrid Claude CLI + claude-flow agent for Raspberry Pi",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "deploy": "./scripts/deploy.sh",
    "deploy:restart": "./scripts/restart.sh",
    "deploy:logs": "ssh tomas@mate.local 'cd ~/mate/docker && docker compose logs -f'",
    "claude:auth": "claude auth login"
  },
  "dependencies": {
    "grammy": "^1.21.0",
    "groq-sdk": "^0.37.0",
    "winston": "^3.11.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "msw": "^2.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
