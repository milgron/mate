{
  "name": "mate",
  "version": "0.2.0",
  "description": "Multi-provider AI Telegram assistant for Raspberry Pi",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:web\"",
    "dev:bot": "tsx watch src/index.ts",
    "dev:web": "npm run dev --prefix web",
    "build": "npm run build:bot && npm run build:web",
    "build:bot": "tsc",
    "build:web": "npm run build --prefix web",
    "start": "concurrently \"npm run start:bot\" \"npm run start:web\"",
    "start:bot": "node dist/index.js",
    "start:web": "npm run start --prefix web",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "deploy": "./scripts/deploy.sh",
    "deploy:restart": "./scripts/restart.sh",
    "deploy:logs": "ssh tomas@mate.local 'cd ~/mate/docker && docker compose logs -f'",
    "version:patch": "npm version patch -m 'Release v%s'",
    "version:minor": "npm version minor -m 'Release v%s'",
    "version:major": "npm version major -m 'Release v%s'"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.9",
    "@ai-sdk/groq": "^3.0.4",
    "@ai-sdk/openai": "^3.0.7",
    "ai": "^6.0.26",
    "better-sqlite3": "^12.5.0",
    "grammy": "^1.21.0",
    "groq-sdk": "^0.37.0",
    "winston": "^3.11.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.2",
    "msw": "^2.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
